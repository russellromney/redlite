{
  "name": "redlite",
  "version": "0.1.0",
  "description": "Redis API + SQLite durability. Embedded Redis-compatible database for browser and Node.js.",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "redis",
    "sqlite",
    "database",
    "cache",
    "embedded",
    "wasm",
    "browser",
    "key-value",
    "kv"
  ],
  "author": "Russell Romney",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/russellromney/redlite"
  },
  "bugs": {
    "url": "https://github.com/russellromney/redlite/issues"
  },
  "homepage": "https://redlite.dev",
  "dependencies": {
    "sql.js": "^1.10.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
